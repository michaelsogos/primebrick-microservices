{
    "name": "erp-base-brick",
    "version": "0.1.0",
    "description": "PrimeBrick ERP Base Microservice",
    "main": "index.js",
    "license": "MIT",
    "brickConfig": {
        "autoInstall": true
    },
    "scripts": {
        "rebuild": "tsc --project tsconfig.json",
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug 9230 --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "migration:create": "typeorm migration:generate -n erp-base-entities",
        "migration:run": "typeorm migration:run",
        "update:packages": "yarn install"
    },
    "dependencies": {
        "@nestjs/common": "^7.5.1",
        "@nestjs/config": "0.5.0",
        "@nestjs/core": "^7.5.1",
        "@nestjs/microservices": "^7.5.1",
        "@nestjs/typeorm": "7.1.4",
        "nats": "1.4.12",
        "pg": "^8.5.0",
        "primebrick-sdk": "^0.113.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "6.6.3",
        "typeorm": "^0.2.29"
    },
    "devDependencies": {
        "@nestjs/cli": "7.5.1",
        "@nestjs/schematics": "^7.2.2",
        "@nestjs/testing": "^7.5.1",
        "@types/express": "4.17.7",
        "@types/jest": "26.0.14",
        "@types/node": "14.11.0",
        "@types/supertest": "2.0.10",
        "@typescript-eslint/eslint-plugin": "^4.7.0",
        "@typescript-eslint/parser": "^4.7.0",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-import": "^2.22.1",
        "jest": "26.4.2",
        "prettier": "2.1.2",
        "supertest": "4.0.2",
        "ts-jest": "26.3.0",
        "ts-loader": "8.0.3",
        "ts-node": "9.0.0",
        "tsconfig-paths": "3.9.0",
        "typescript": "^4.0.5"
    }
}
