{
    "name": "primebrick-erp-saleorder-core",
    "version": "0.1.0",
    "description": "PrimeBrick SaleOrder Microservice",
    "main": "index.js",
    "license": "MIT",
    "scripts": {
        "prebuild": "rimraf dist",
        "build": "nest build",
        "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug 9228 --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:cov": "jest --coverage",
        "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
        "test:e2e": "jest --config ./test/jest-e2e.json",
        "migration:create": "typeorm migration:generate -n core-entities",
        "migration:run": "typeorm migration:run",
        "update:packages": "yarn install"
    },
    "dependencies": {
        "@nestjs/common": "7.4.4",
        "@nestjs/config": "0.5.0",
        "@nestjs/core": "7.4.4",
        "@nestjs/microservices": "7.4.4",
        "@nestjs/typeorm": "7.1.4",
        "pg": "8.3.3",
        "primebrick-sdk": "^0.97.0",
        "reflect-metadata": "0.1.13",
        "rimraf": "3.0.2",
        "rxjs": "6.6.3",
        "typeorm": "0.2.26"
    },
    "devDependencies": {
        "@nestjs/cli": "7.5.1",
        "@nestjs/schematics": "7.1.2",
        "@nestjs/testing": "7.4.4",
        "@types/express": "4.17.7",
        "@types/jest": "26.0.14",
        "@types/node": "14.11.0",
        "@types/supertest": "2.0.10",
        "@typescript-eslint/eslint-plugin": "4.1.1",
        "@typescript-eslint/parser": "4.1.1",
        "eslint": "7.9.0",
        "eslint-config-prettier": "6.11.0",
        "eslint-plugin-import": "2.22.0",
        "jest": "26.4.2",
        "prettier": "2.1.2",
        "supertest": "4.0.2",
        "ts-jest": "26.3.0",
        "ts-loader": "8.0.3",
        "ts-node": "9.0.0",
        "tsconfig-paths": "3.9.0",
        "typescript": "4.0.2"
    }
}
