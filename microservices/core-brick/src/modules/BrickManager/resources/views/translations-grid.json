{
    "name": "translations-grid",
    "labelKey": "translations",
    "definition": {
        "entity": "MetaTranslation",
        "type": "grid",
        "fields": [
            {
                "name": "key",
                "labelKey": "key"
            },
            {
                "name": "languageCode",
                "labelKey": "language-code"
            },
            {
                "name": "value",
                "labelKey": "translation"
            },
            {
                "name": "group",
                "labelKey": "group"
            },
            {
                "name": "isTemplate",
                "labelKey": "template",
                "type": "boolean"
            }
        ],
        "filters": [
            {
                "expressions": ["$self.languageCode = 'it'"]
            }
        ],
        "sorts": [
            {
                "field": "key",
                "direction": "ASC"
            }
        ]
    },
    "alternativeViews": [
        {
            "name": "translations-cards",
            "type": "cards"
        }
    ],
    "options": {
        "enableMultiSelect": false
    },
    "actions": {
        "open": {
            "view": "translations-form",
            "enableDoubleClick": false,
            "enableRowButton": false
        },
        "edit": {
            "view": "translations-form",
            "enableDoubleClick": true,
            "enableRowButton": true
        },
        "add": {
            "view": "translations-form",
            "enableToolbarButton": false,
            "enableFloatingButton": false,
            "enableMenuLink": false
        },
        "delete": {
            "enableToolbarButton": false,
            "enableRowButton": false,
            "enableMenuLink": false
        },
        "archive": {
            "enableToolbarButton": false,
            "enableRowButton": false,
            "enableMenuLink": false
        },
        "refresh": {
            "enableToolbarButton": false,
            "enableMenuLink": false
        },
        "search": {
            "enableToolbarButton": false,
            "fields": ["a", "v"]
        },
        "filter": {
            "enableColumns": false,
            "enableToolbarButton": false,
            "fields": [{ "field": "key", "type": "string" }]
        },
        "customActions": [
            {
                "type": "text",
                "name": "ciccio",
                "labelKey": "aasd"
            }
        ]
    },
    "events": {
        "onLoadData": {
            "waitUntil": [
                {
                    "source": "customAction",
                    "name": "ciccio",
                    "operator": "is",
                    "expression": "NotNull"
                }
            ]
        }
    },
    "highlighters": [
        {
            "expression": "group == 'main'",
            "backgroundColor": "red",
            "fontColor": "white",
            "fontWeight": "bold",
            "fontStyle": "line-through",
            "fontItalic": true
        }
    ]
}
